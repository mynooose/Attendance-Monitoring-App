<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#034abc" />
            <gradient android:angle="-90" android:startColor="#034abc" android:endColor="#034abc"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#4169e1" />
            <solid android:color="#1E90FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#054090" />
            <gradient android:angle="-90" android:startColor="#054090" android:endColor="#054090" />
        </shape>
    </item>
</selector>